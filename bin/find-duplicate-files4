#!/usr/bin/env bash

# Find duplicate files, excluding .git dirs and zero-length files, no "./" prefix.

set -eo pipefail

# Declare associative array for MD5 hashes.
declare -A md5_array

# Walk directory tree, NUL-safe.
while IFS= read -r -d '' file; do
    # Calculate the md5 checksum of the file.
    md5sum=$(md5sum "$file" | awk '{print $1}')
    # Check if the md5 checksum is already in the array.
    if [[ ${md5_array[$md5sum]} ]]; then
        # If it is, it's a duplicate file.
        printf "%s\n" "$file"
    else
        # If not, add the md5 checksum to the array.
        md5_array[$md5sum]="$file"
    fi
done < <(find . -type f -print0)

# Exit with a success code.
exit 0
